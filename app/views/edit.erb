<DOCTYPE html>
  <html>
  <body>
    <h1>Edit a new article</h1>
    <form method="POST" action="/articles/<%=@article.id %>">
      <input id="hidden" type="hidden" name="_method" value="PATCH">
      <p>Edit Article Title: <input id="title" type="text" name="article[title]" value="<%= @article.title %>"></p>
      <p>Edit Article Content: <input id="content" type="text" name="article[content]" value="<%= @article.content %>"></p>
      <input type="submit" id="submit">
    </form>
  </body>
  </html>
